@model SARCEM_TCC.web.Models.RegisterViewModel
@{
    ViewBag.Title = "Registro de Usuários";
}

<h2>@ViewBag.Title.</h2>




@using (Html.BeginForm("Register", "Account", FormMethod.Post, 
    new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*<h4>Create a new account.</h4>*@
    <hr />
    @Html.ValidationSummary(true, "Por favor corrija os erros sinalizados")

    
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.UserBr, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.UserBr, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserBr)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.EmpresaID, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.EmpresaID,
           new SelectList(Model.Empresas, "EmpresaID", "EmpresaNome"), "",
           new { @class = "form-control", @id = "listaEmpresa" })
                @Html.ValidationMessageFor(m => m.EmpresaID)
            </div>
        </div>

       


        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Registrar" />
            </div>
        </div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}
